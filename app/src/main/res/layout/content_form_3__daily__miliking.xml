<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87ceeb">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/editteststyle"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Milking Record"/>

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/ref_date"
                    android:background="@drawable/editteststyle"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date:"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:padding="8dp"
                    android:background="@drawable/editteststyle"
                    android:layout_margin="8dp"
                    android:id="@+id/name"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:hint="Cow Tag Id"
                    android:layout_height="wrap_content" />
                <EditText
                    android:background="@drawable/editteststyle"
                    android:layout_margin="8dp"
                    android:id="@+id/mor_milk_count"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:hint="Morning Milk Count (Litres)"
                    android:inputType="number"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:background="@drawable/editteststyle"
                    android:layout_margin="8dp"
                    android:fontFamily="serif"
                    android:id="@+id/eve_milk_count"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:hint="Evening Milk Count (Litres)"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/BtnSave"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="AddMilk"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:text="Save"/>

                <Button
                    android:id="@+id/Btn1Save"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onBack"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:text="Home"/>



            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87ceeb">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/editteststyle"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_gravity="center"
                    android:layout_margin="32dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Cow Information"/>

                <EditText
                    android:background="@drawable/editteststyle"
                    android:layout_margin="8dp"
                    android:id="@+id/text_ID"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textColor="#000000"
                    android:hint="Cow Tag Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:padding="8dp"
                    android:background="@drawable/editteststyle"
                    android:layout_margin="8dp"
                    android:textStyle="bold"
                    android:id="@+id/text_sex"
                    android:fontFamily="serif"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:hint="Gender"
                    android:layout_height="wrap_content" />
                <EditText
                    android:background="@drawable/editteststyle"
                    android:layout_margin="8dp"
                    android:id="@+id/text_age"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:hint="Age"
                    android:fontFamily="serif"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:background="@drawable/editteststyle"
                    android:layout_margin="8dp"
                    android:fontFamily="serif"
                    android:id="@+id/milking_status"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:hint="Milking Status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <!--<EditText-->
                    <!--android:background="@drawable/editteststyle"-->
                    <!--android:layout_margin="8dp"-->
                    <!--android:fontFamily="serif"-->
                    <!--android:id="@+id/farm_since"-->
                    <!--android:padding="8dp"-->
                    <!--android:textColor="#000000"-->
                    <!--android:textStyle="bold"-->
                    <!--android:hint="On Farm Since"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/farm_since"
                    android:background="@drawable/editteststyle"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="On Farm Since:"
                    android:inputType="textEmailAddress" />

                <Button
                    android:id="@+id/BtnSave"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="Save"/>

                <Button
                    android:id="@+id/Btn1Save"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onBack"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:text="Home"/>




            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
